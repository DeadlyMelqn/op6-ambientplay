    <SwitchPreference android:icon="@drawable/ic_lock" android:title="@string/tweaks_lockscreen_guide_text_title" android:key="tweaks_lockscreen_guide_text" android:summary="@string/disabled" android:defaultValue="false" android:summaryOn="@string/tweaks_lockscreen_guide_text_summaryOn" />
    <PreferenceCategory android:title="@string/misc_preference_title" />
    <SwitchPreference android:icon="@drawable/ic_security" android:title="@string/tweaks_secure_window_title" android:key="tweaks_secure_window" android:summary="@string/tweaks_secure_window_summary" android:defaultValue="true" android:summaryOn="@string/tweaks_secure_window_summaryOn" />
    <SwitchPreference android:icon="@drawable/ic_netflix" android:title="@string/tweaks_netflix_title" android:key="tweaks_netflix" android:summary="@string/disabled" android:defaultValue="false" android:summaryOn="@string/enabled" />
</PreferenceScreen>